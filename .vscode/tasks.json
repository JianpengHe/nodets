{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for thedocumentation about the tasks.json format
  "version": "2.0.0",
  "command": "tsc",
  //-p 指定目录；-w watch,检测文件改变自动编译
  "args": ["-p", ".", "-w"],
  "problemMatcher": "$tsc",
  "tasks": [
    {
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "option": "watch",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "label": "tsc: 监视 - tsconfig.json"
    }
  ]
}
